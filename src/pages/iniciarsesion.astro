---
import "../styles/global.css";
import "../styles/auth.css";
---



<!DOCTYPE html>
<html class="dark" lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>Inicio de sesión de Soundhub</title>
  <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

</head>
<body class="bg-background-light dark:bg-background-dark font-display">
  <div class="relative flex h-auto min-h-screen w-full flex-col bg-[#141118] group/design-root overflow-hidden">
    <!-- Blob animado 1 (azul cian) -->
    <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-gradient-to-br from-[#00d4ff] to-transparent rounded-full mix-blend-screen opacity-20 filter blur-3xl animate-blob-1"></div>
    
    <!-- Blob animado 2 (naranja) -->
    <div class="absolute bottom-1/3 left-1/4 w-96 h-96 bg-gradient-to-br from-[#ff6b35] to-transparent rounded-full mix-blend-screen opacity-20 filter blur-3xl animate-blob-2"></div>
    
    <div class="layout-container flex h-full grow flex-col relative z-10">
      <div class="px-4 md:px-10 flex flex-1 justify-center py-5">
        <div class="layout-content-container flex flex-col max-w-[480px] flex-1">
          <div class="flex flex-col items-center justify-center flex-1">
            <div class="flex items-center gap-3 pb-8">
              <svg fill="none" height="40" viewBox="0 0 40 40" width="40" xmlns="http://www.w3.org/2000/svg">
                <circle cx="20" cy="20" fill="url(#paint0_linear_1_2)" r="20"></circle>
                <defs>
                  <linearGradient gradientUnits="userSpaceOnUse" id="paint0_linear_1_2" x1="0" x2="40" y1="0" y2="40">
                    <stop stop-color="#E83F6F"></stop>
                    <stop offset="1" stop-color="#6D13EC"></stop>
                  </linearGradient>
                </defs>
              </svg>
              <h2 class="text-white text-3xl font-bold">Soundhub</h2>
            </div>
            <h1 class="text-white tracking-light text-[32px] font-bold leading-tight px-4 text-center pb-3 pt-6">Inicia sesión en Soundhub</h1>
            <div class="w-full mt-8">
              <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                <label class="flex flex-col min-w-40 flex-1">
                  <p class="text-white text-base font-medium leading-normal pb-2">Usuario o correo</p>
                  <input
                    id="login-email"
                    class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-white focus:outline-0 focus:ring-2 focus:ring-primary border-none bg-[#2f2839] h-14 placeholder:text-[#a89db9] p-4 text-base font-normal leading-normal"
                    placeholder="Ingresa tu usuario o correo"
                    value=""
                  />
                </label>
              </div>
              <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                <label class="flex flex-col min-w-40 flex-1">
                  <p class="text-white text-base font-medium leading-normal pb-2">Contraseña</p>
                  <div class="flex w-full flex-1 items-stretch rounded-xl">
                    <input
                      id="login-password"
                      class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-white focus:outline-0 focus:ring-2 focus:ring-primary border-none bg-[#2f2839] h-14 placeholder:text-[#a89db9] p-4 rounded-r-none border-r-0 pr-2 text-base font-normal leading-normal"
                      placeholder="Ingresa tu contraseña"
                      type="password"
                      value=""
                    />
                    <div class="text-[#a89db9] flex border-none bg-[#2f2839] items-center justify-center pr-4 rounded-r-xl border-l-0">
                      <span
                        class="material-symbols-outlined"
                        id="login-password-toggle-icon"
                        style="font-size: 24px;"
                        onclick="togglePasswordVisibility('login-password', 'login-password-toggle-icon')"
                      >
                        visibility
                      </span>
                    </div>
                  </div>
                </label>
              </div>
              <div class="w-full px-4">
                <p class="text-[#a89db9] text-sm font-normal leading-normal pb-3 pt-1 px-4 text-right underline cursor-pointer hover:text-white">
                  ¿Olvidaste tu contraseña?
                </p>
              </div>
            </div>
            <div class="w-full flex px-4 py-3">
              <button
                id="login-submit"
                class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-12 px-5 flex-1 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-opacity-90 transition-all duration-300"
              >
                <span class="truncate">Iniciar sesión</span>
              </button>
            </div>

            <!-- Mensaje de error/estado login -->
            <p id="login-message" class="text-center text-xs mt-1 min-h-[1.25rem]"></p>
            <br>
            <p class="text-[#a89db9] text-sm font-normal leading-normal py-6">
              ¿No tienes una cuenta?
              <a class="text-white font-medium underline hover:text-[#e83f6f]" href="/registro">Regístrate</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- JS de login con Supabase -->
  <script src="../js/auth/login.js"></script>
</body>
</html>
